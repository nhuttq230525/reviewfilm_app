<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".HomeFragment">

    <!-- Tiêu đề cho Banner Phim Hot -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phim Hot"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"/>

    <!-- ViewPager2 để hiển thị Banner phim hot -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/banner_view_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>
    <!-- Ghi chú: paddingStart và paddingEnd là để tạo hiệu ứng nhìn thấy một phần của banner trước và sau -->

    <!-- Tiêu đề cho danh sách phim bên dưới -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tất cả phim"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"/>

    <!-- RecyclerView để hiển thị danh sách tất cả các phim -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_movies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

</LinearLayout>
